<div class="comments w-auto mx-5">
  {{#each this}}
    <section class="comment bg-blue-300 my-3">
      <div class="meta">
        {{user.username}}
        on
        {{format_date created_at}}
      </div>
      <div class="text">
        {{comment_text}}
      </div>
    </section>
  {{/each}}
</div>