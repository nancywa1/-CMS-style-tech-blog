<div class="border-solid border-2 border-black rounded mx-10 mt-10">
  <h2 class="bg-blue-300 text-3xl pl-5">Sign Up</h2>
  <form class="signup-form container mx-auto pt-5 px-5 mt-5">
    <div>
      <label for="username-signup">
        <span
          class="after:content-['*'] after:ml-0.5 after:text-red-500 block text-sm font-medium text-slate-700 pb-1"
        >
          User Name:
        </span>
      </label>
      <input
        type="text"
        id="username-signup"
        class="mt-1 px-3 py-2 bg-white border shadow-sm border-slate-300 placeholder-slate-400 focus:outline-none focus:border-sky-500 focus:ring-sky-500 block w-full rounded-md sm:text-sm focus:ring-1"
        placeholder="Enter your user name"
      />
    </div>
    <div>
      <label for="email-signup">
        <span
          class="after:content-['*'] after:ml-0.5 after:text-red-500 block text-sm font-medium text-slate-700 pb-1"
        >
          Email:
        </span>
      </label>
      <input
        type="text"
        id="email-signup"
        class="mt-1 px-3 py-2 bg-white border shadow-sm border-slate-300 placeholder-slate-400 focus:outline-none focus:border-sky-500 focus:ring-sky-500 block w-full rounded-md sm:text-sm focus:ring-1"
        placeholder="you@example.com"
      />
    </div>
    <div>
      <label for="password-signup">
        <span
          class="after:content-['*'] after:ml-0.5 after:text-red-500 block text-sm font-medium text-slate-700 pb-1"
        >
          Password:
        </span>
      </label>
      <input
        type="password"
        id="password-signup"
        class="mt-1 px-3 py-2 bg-white border shadow-sm border-slate-300 placeholder-slate-400 focus:outline-none focus:border-sky-500 focus:ring-sky-500 block w-full rounded-md sm:text-sm focus:ring-1"
        placeholder="Enter your password"
      />
    </div>
    <div>
      <button
        type="submit"
        class="bg-blue-500 hover: bg-blue-400 text-white fond-bold py-2 px-4 w-full rounded my-5"
      >Sign Up!</button>
    </div>
    <a
      href="/login"
      class="text-white text-slate-700 bg-blue-600 border-none"
    >Login instead instead</a>
  </form>
</div>
<script src="/javascript/signup.js"></script>